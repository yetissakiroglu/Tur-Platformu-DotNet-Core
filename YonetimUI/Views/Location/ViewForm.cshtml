@model LocationViewModel
<div class="small-header affix-top">
    <div class="mb-4">
        <div class="card-header py-3 d-sm-flex align-items-center justify-content-between">
            <div class="pull-left">
                <h4 class="m-b-xs">
                    @Model.title
                </h4>
                <small>@Model.message</small>
            </div>
            <div class="btn-group pull-right">
                <button name="geri_don" type="button" value="Geri Dön" onclick="javascript:window.history.go(-1);" class="btn btn-primary btn-sm"><i class="fa fa-angle-left"></i>&nbsp;Geri Dön</button>
                <div class="btn-group">
                    <a class="btn btn-sm green dropdown-toggle" href="javascript:;" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                        İşlemler
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li>
                            <a asp-action="Create"><i class="fa fa-plus"></i>&nbsp;Yeni Ekle</a>
                        </li>
                        <li class="split"></li>
                        <li>
                            <a asp-action="Index"><i class="fa fa-list"></i>&nbsp;Tüm Kayıtlar</a>
                        </li>
                    </ul>
                </div>
                <input type="submit" value="KAYDET" class="btn btn-success btn-sm" />
            </div>
        </div>
    </div>
</div>

<div class="card-body">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="Location.location_Id" asp-for="Location.location_Id" value="@Model.Location.location_Id">
    <input type="hidden" name="Location.topLocation_Id" asp-for="Location.topLocation_Id" value="@Model.Location.topLocation_Id">
    <input type="hidden" name="Location.image_id" asp-for="Location.image_Id" value="@Model.Location.image_Id">
    <input type="hidden" name="Location.imgPath" asp-for="Location.imgPath" value="@Model.Location.imgPath">

    <div class="form-group">
        @Html.LabelFor(model => model.Location.topLocation_Id, htmlAttributes: new { @class = "control-label" })
        <div class="col-md-12 p-0">
            <div class="input-group">
                @Html.DropDownListFor(model => model.Location.topLocation_Id, (IEnumerable<SelectListItem>)Model.TopLocationListItem, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(model => model.Location.topLocation_Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Location.title" class="control-label"></label>
        <input asp-for="Location.title" class="form-control" />
        <span asp-validation-for="Location.title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location.keywords" class="control-label"></label>
        <div class="form-group">
            <input asp-for="Location.keywords" class="form-control" data-role="tagsinput" />
        </div>
        <span asp-validation-for="Location.keywords" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location.description" class="control-label"></label>
        <div class="form-group">
            <input asp-for="Location.description" class="form-control" data-role="tagsinput" />
        </div>
        <span asp-validation-for="Location.description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="form-group col-md-4">
                <div class="row">
                    @Html.LabelFor(model => model.Location.imgPath, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        <div class="fileinput fileinput-new" data-provides="fileinput">
                            <div class="fileinput-new thumbnail">
                                @if (Model.Location.imgPath == null)
                                {
                                    <img src="https://via.placeholder.com/706x431" alt="" />
                                }
                                else
                                {<img src="@Model.Location.imgPath" width="250" alt="" />
                                }
                            </div>
                            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                            <div>
                                <span class="btn default btn-file">
                                    <span class="fileinput-new"> Resim Seç </span>
                                    <span class="fileinput-exists"> Değiştir </span>
                                    <input type="file" id="imgPath" name="imgPath" class="form-control" accept=".jpg,.png" />
                                </span>
                                <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Sil </a>
                            </div>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.Location.imgPath, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Location.content" class="control-label"></label>
        <textarea id="editor" asp-for="Location.content" class="form-control" rows="6"></textarea>
        <span asp-validation-for="Location.content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location.row" class="control-label"></label>
        <input asp-for="Location.row" class="form-control" />
        <span asp-validation-for="Location.row" class="text-danger"></span>
    </div>

    <div class="custom-control custom-checkbox small">
        <label class="custom-control-input">
            <input class="form-check-input" asp-for="Location.state" /> @Html.DisplayNameFor(model => model.Location.state)
        </label>
    </div>

    <div class="form-group">
        <input type="submit" value="KAYDET" class="btn btn-primary" />
    </div>

</div>
